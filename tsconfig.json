{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "Node16",
        "target": "ES2022",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@styles/*": ["src/styles/*"],
            "@components/*": ["src/components/*"],
            "@utils/*": ["src/utils/*"]
        },
        "baseUrl": "./"
    },
    "include": ["./**/*.ts", "./**/*.tsx", "./src/global.d.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
